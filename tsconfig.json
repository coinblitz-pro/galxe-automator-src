  "compilerOptions": {
    "target": "ES2022",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "rootDir": "./",
    "outDir": "dist",
  }
}
